  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug mako cli with examples",
      "cargo": {
        "args": [
          "build",
          "--bin=mako",
          "--package=mako_cli",
        ],
        "filter": {
          "name": "mako",
          "kind": "bin"
        }
      },
      "args": [
				"${fileDirname}"
			],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'mako_bundler'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=mako_bundler"
        ],
        "filter": {
          "name": "mako_bundler",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'mako'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=mako",
          "--package=mako_cli"
        ],
        "filter": {
          "name": "mako",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
