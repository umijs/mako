{
  "entry": {
    "app1": "./src/index.ts"
  },
  "moduleFederation": {
    "name": "mfHost",
    "remotes": {
      "widget": "mfWidget@http://localhost:3000/mfWidget.js"
    },
    "shared": { "react": {}, "react-dom": {} }
  },
  "experimental": {
    "centralEnsure": false
  },
  "define": {
    "process.env.SOCKET_SERVER": "\"http://localhost:3001\""
  },
  "codeSplitting": {
    "strategy": "advanced",
    "options": {
      "groups": [
        {
          "name": "vendor",
          "allowChunks": "all",
          "minSize": 1,
          "test": "node_modules"
        }
      ]
    }
  }
}
