{
  "entry": {
    "app2": "./src/index.ts"
  },
  "publicPath": "auto",
  "moduleFederation": {
    "name": "mfWidget",
    "exposes": {
      "./App1": "./src/App1.tsx",
      "./App2": "./src/App2.tsx"
    },
    "shared": { "react": {}, "react-dom": {} },
    "runtimePlugins": []
  },
  "experimental": {
    "centralEnsure": false
  },
  "define": {
    "process.env.SOCKET_SERVER": "\"http://localhost:3000\""
  },
  "codeSplitting": {
    "strategy": "advanced",
    "options": {
      "groups": [
        {
          "name": "vendor",
          "allowChunks": "all",
          "minSize": 1,
          "test": "node_modules"
        }
      ]
    }
  }
}
